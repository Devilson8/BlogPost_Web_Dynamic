<%- include("partials/_header.ejs") %>

<style>
  body {
    background-image: url("../imgs/cocktail_trip.jpeg");
    background-size: cover;
    background-attachment: fixed;
  }
</style>

<div class="container contact mt-5">
  <div class="row">
    <div class="col-md-3">
      <div class="contact-info">
        <img src="https://image.ibb.co/kUASdV/contact-image.png" alt="image" />
        <h2>Contact Us</h2>
        <h4>Be part of our journey!</h4>
      </div>
    </div>
    <div class="col-md-9">
      <div class="contact-form">
        <div class="form-group pt-5">
          <label class="control-label col-sm-2" for="userName"
            >Full Name:</label
          >
          <div class="col-sm-10">
            <input
              type="name"
              class="form-control"
              id="username"
              placeholder="Enter Full Name"
              name="username"
              required
            />
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-2" for="email">Email:</label>
          <div class="col-sm-10">
            <input
              type="email"
              class="form-control"
              id="email"
              placeholder="Enter email"
              name="email"
              required
            />
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-2" for="writeUs">Write Us</label>
          <div class="col-sm-10">
            <textarea></textarea>
          </div>
        </div>
        <div class="form-group pt-5">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="check" class="btn btn-default">Submit</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!--Social Media-->
<div class="socialMedia">
  <div class="container_flex">
    <ul class="theList">
      <a href="#" class=""><i class="fa-brands fa-github"></i></a>

      <a href="#" class=""><i class="fa-brands fa-facebook"></i></a>

      <a href="#" class=""><i class="fa-brands fa-instagram"></i></a>

      <a href="#" class=""><i class="fa-brands fa-x-twitter"></i></a>
    </ul>
  </div>
</div>

